    cout<<4*((int)(sqrt(ab*ac/bc)+.5)+(int)(sqrt(ab*bc/ac)+.5)+(int)(sqrt(ac*bc/ab)+.5))<< endl;  // the common letter in the multiplication is what we got it`s length
    return 0;
}
